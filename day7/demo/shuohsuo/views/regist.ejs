<script>
    $(function(){
        $('#submit_btn').on('click',function(){
            $.ajax({
                url:'/doregist',
                dataType:'json',
                data:{
                    name:$('#name').val(),
                    password:$('#pass').val(),
                },
                type:'post',
                success:function(res){
                    console.log(res);
                    if(res.retcode==1){
                        alert('添加成功')
                        location.reload()
                    }
                }
            })
        })
    })
</script>