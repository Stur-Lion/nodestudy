<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>班级说说-登录</title>
    <link rel="stylesheet" href="/css/bootstrap.css"/>
    <script src="/js/jquery-3.1.1.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <style>
        label{
            display: inline-block;
            min-width: 100px;
            text-align: right;
        }
        .form-group input{
            display: inline-block;
            width: 300px;
        }
        #submit_btn{
            margin: 0 auto;
            display: block;
        }
    </style>
</head>
<body>
<% include header.ejs %>

<div>
    <% if(login==1){ %>
    <div class="container">
        <h1>欢迎登录班级说说！</h1>
    </div>
    <% }else { %>
    <div class="container" style="padding: 0 300px">
        <div class="form-group" style="max-width: 500px">
            <label for="">用户名：</label>
            <input type="text" class="form-control" id="name">
        </div>
        <div class="form-group" style="max-width: 500px">
            <label for="">密码：</label>
            <input type="text" class="form-control" id="pass">
        </div>
        <button type="submit" class="btn btn-default" id="submit_btn">登录</button>
    </div>
    <% } %>
</div>
</body>
</html>
<script>
    $(function(){
        $('#submit_btn').on('click',function(){
            $.ajax({
                url:'/doIndex',
                dataType:'json',
                data:{
                    name:$('#name').val(),
                    password:$('#pass').val(),
                },
                type:'post',
                success:function(res){
                    console.log(res);
                    if(res.retcode==1){
                        alert('登录成功')
                        location.href='/'
                    }
                }
            })
        })

        $('#out_login').on('click',function(){
            $.ajax({
                url:'/outlogin',
                dataType:'json',
                type:'post',
                success:function(res){
                    console.log(res);
                    if(res.retcode==1){
                        location.href='/'
                    }
                }
            })
        })
    })
</script>















